<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/joinCodeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    tools:showIn="@layout/activity_join">

    <EditText
        android:id="@+id/joinCode1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:inputType="textCapCharacters"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:theme="@style/CodeInput" />

    <EditText
        android:id="@+id/joinCode2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:inputType="textCapCharacters"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:theme="@style/CodeInput" />

    <EditText
        android:id="@+id/joinCode3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:inputType="textCapCharacters"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:theme="@style/CodeInput" />

    <EditText
        android:id="@+id/joinCode4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:inputType="textCapCharacters"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:theme="@style/CodeInput" />

    <EditText
        android:id="@+id/joinCode5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:inputType="textCapCharacters"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:theme="@style/CodeInput" />

    <EditText
        android:id="@+id/joinCode6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:inputType="textCapCharacters"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:theme="@style/CodeInput" />

</LinearLayout>